.item_services .v-expansion-panel__header, .selected_pack .v-expansion-panel__header {
  height: auto;
}

.booking__stepper .v-stepper__step__step {
  display: none;
}

.client__details .v-text-field .v-input__slot,
.credit__card .v-text-field .v-input__slot {
  background-color: #ffffff !important;
  border: 1px solid #c6c8cc !important;
  border-radius: 0;
}

.client__details .v-text-field .v-input__slot, .credit__card .v-text-field .v-input__slot {
  height: 56px;
  padding-right: 15px
}